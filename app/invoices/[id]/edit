import { Suspense } from "react";
import { notFound, redirect } from "next/navigation";
import { createClient } from "@/lib/supabase/server";
import AppShell from "@/app/components/AppShell";
import EditInvoiceClient from "./EditInvoiceClient";
import { mapDbAccountType } from "@/app/types";

export const dynamic = "force-dynamic";

type Company = { id: string; company_name: string };

function s(v: any) {
  return String(v ?? "").trim();
}

export default async function Page({ params }: { params: { id: string } }) {
  const supabase = await createClient();

  const { data: auth } = await supabase.auth.getUser();
  if (!auth?.user) redirect("/login");

  const invoiceId = s(params?.id);
  if (!invoiceId) notFound();

  const { data: profile } = await supabase
    .from("app_users")
    .select("account_type,is_pdg")
    .eq("id", auth.user.id)
    .maybeSingle();

  const t = mapDbAccountType(profile?.account_type);

  const { data: companiesRaw } = await supabase
    .from("companies")
    .select("id,company_name")
    .order("company_name", { ascending: true });

  const companies = (companiesRaw ?? []) as Company[];

  const { data: invoice } = await supabase.from("invoices").select("*").eq("id", invoiceId).single();
  if (!invoice) notFound();

  const sigStatus = s((invoice as any).signature_status).toLowerCase();
  const signedAt = (invoice as any).signed_at;
  if (sigStatus === "signed" || !!signedAt) redirect(`/invoices/${invoiceId}`);

  const { data: items } = await supabase
    .from("invoice_items")
    .select("*")
    .eq("invoice_id", invoiceId)
    .order("line_no", { ascending: true });

  return (
    <AppShell title="Modifier document" subtitle="Facture / Devis / Avoir" accountType={t} isPdg={Boolean(profile?.is_pdg)}>
      <Suspense fallback={<div className="p-6">Chargement...</div>}>
        <EditInvoiceClient companies={companies} invoice={invoice} items={items ?? []} />
      </Suspense>
    </AppShell>
  );
}
